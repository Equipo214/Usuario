<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">


    <TextView
        android:id="@+id/list_text_location"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Tu ubicaciÃ³n"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/list_text_map"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Seleccionar en el mapa"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/icoLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_text_location"
        android:layout_alignStart="@+id/icoMap"
        android:src="@drawable/ic_my_location_light_blue_24dp" />

    <ImageView
        android:id="@+id/icoMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_text_map"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:src="@drawable/ic_pin_drop_black_24dp" />


    <View
        android:id="@+id/divider"
        android:layout_width="271dp"
        android:layout_height="1dp"
        android:layout_below="@+id/list_text_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:visibility="visible" />

</RelativeLayout>
